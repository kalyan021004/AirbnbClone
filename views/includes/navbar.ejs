<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom sticky-top py-2">
  <div class="container-fluid">

    <!-- Left: Brand and Links -->
    <div class="d-flex align-items-center gap-3">
      <a class="navbar-brand fs-4" href="/main">
        <i class="fa-regular fa-compass"></i> StayEasy
      </a>
      <a class="nav-link" href="/listings">All Places</a>
      <% if (currentUser) { %>
        <a class="nav-link" href="/listings/new">Add New</a>
      <% } %>
    </div>

    <!-- Center: Search Bar (visible only for logged in users) -->
    <% if (currentUser) { %>
    <form class="d-none d-lg-flex mx-auto w-50" action="/listings/search" method="GET">
      <input class="form-control me-2" type="search" name="q" placeholder="Search listings">
      <button class="btn btn-outline-success" type="submit">
        <i class="fas fa-search"></i>
      </button>
    </form>
    <% } %>

