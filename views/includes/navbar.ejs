      </div>

      <% if (currentUser) { %>
        <!-- 🖥️ Search Bar in Center for md+ screens -->
        <form class="d-none d-md-flex mx-auto" style="max-width: 400px;" action="/listings/search" method="GET">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search listings"
            name="q"
            aria-label="Search"
