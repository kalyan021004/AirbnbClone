<% layout('layouts/boilerplate.ejs') %>

<div class="container my-5">
  <!-- Listing Card -->
  <div class="card shadow mx-auto" style="max-width: 700px;">
    <img
      src="<%= typeof listing.image === 'string' ? listing.image : (listing.image?.path || 'https://via.placeholder.com/700x400?text=No+Image') %>"
      class="card-img-top"
      alt="<%= listing.title %>"
      onerror="this.onerror=null; this.src='https://via.placeholder.com/700x400?text=No+Image';"
      style="height: 350px; object-fit: cover;"
    />

    <div class="card-body">
      <h3 class="card-title"><%= listing.title %></h3>
      <p class="text-muted mb-2">
        Hosted by <strong><%= listing.author?.username || "Unknown" %></strong>
        <% if (currentUser && listing.author && String(listing.author._id) === String(currentUser._id)) { %>
          <span class="badge bg-info text-dark ms-2">You are the host</span>
        <% } %>
      </p>
      <p><%= listing.description %></p>
      <p><strong>â‚¹<%= listing.price.toLocaleString("en-IN") %></strong> / night</p>
      <p class="text-muted">
        <i class="fa-solid fa-location-dot me-1"></i><%= listing.location %>, <%= listing.country %>
      </p>
    </div>

    <% if (currentUser && listing.author && String(listing.author._id) === String(currentUser._id)) { %>
      <div class="card-footer d-flex justify-content-between">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this listing?');">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    <% } %>
  </div>

  <!-- Reviews Section -->
  <div class="mt-5">
    <h4 class="mb-4 border-bottom pb-2">Reviews</h4>

    <% if (listing.reviews.length > 0) { %>
      <% listing.reviews.forEach(review => { %>
        <div class="d-flex align-items-center justify-content-between border-bottom py-2">
          <div>
            <span class="text-warning me-2">
              <% for (let i = 1; i <= 5; i++) { %>
                <i class="fa-star <%= i <= review.rating ? 'fas' : 'far' %>"></i>
              <% } %>
            </span>
            <span><%= review.body %></span>
            <small class="text-muted d-block">By: <%= review.author?.username || "Anonymous" %></small>
          </div>

          <% if (currentUser && review.author && String(review.author._id) === String(currentUser._id)) { %>
            <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this review?');">
              <button class="btn btn-sm btn-outline-danger">Delete</button>
            </form>
          <% } %>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-muted">No reviews yet. Be the first to write one!</p>
    <% } %>
  </div>

  <!-- Add Review Button -->
  <% if (currentUser) { %>
    <div class="text-end my-4">
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#reviewModal">
        <i class="fa-solid fa-pen-to-square me-1"></i> Add Review
      </button>
    </div>
  <% } else { %>
    <p class="mt-4">Please <a href="/signin">sign in</a> to leave a review.</p>
  <% } %>
</div>

<!-- Add Review Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/listings/<%= listing._id %>/reviews" method="POST">
        <div class="modal-header">
          <h5 class="modal-title" id="reviewModalLabel">Add Your Review</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <div class="mb-3">
            <label for="reviewBody" class="form-label">Review</label>
            <textarea name="review[body]" class="form-control" id="reviewBody" rows="3" required></textarea>
          </div>
          <div class="mb-3">
            <label for="reviewRating" class="form-label">Rating</label>
            <select name="review[rating]" id="reviewRating" class="form-select" required>
              <option selected disabled value="">Choose...</option>
              <% for (let i = 1; i <= 5; i++) { %>
                <option value="<%= i %>"><%= i %> Star<%= i > 1 ? 's' : '' %></option>
              <% } %>
            </select>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Submit Review</button>
        </div>
      </form>
    </div>
  </div>
</div>
